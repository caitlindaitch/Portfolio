<div class="show-title">
  <%= link_to image_tag("PersonalLogo.png", :class => "show-logo"), projects_path %>
  <h1><%= @project.name %></h1>
</div>

<div class="show-links">
  <% if @project.githubURL %>
    <span class="show-button"><%= link_to "GitHub Repository", @project.githubURL %></span>
  <% end %>
  <% if @project.URL %>
    <span class="show-button"><%= link_to "View Project", @project.URL %></span>
  <% end %>
</div>

<div class="show-technologies">
  <% if @project.technology1 %>
    <span class="technology"><%= @project.technology1 %></span>
  <% end %>
  <% if @project.technology2 %>
    <span class="technology"><%= @project.technology2 %></span>
  <% end %>
  <% if @project.technology3 %>
    <span class="technology"><%= @project.technology3 %></span>
  <% end %>
  <% if @project.technology4 %>
    <span class="technology"><%= @project.technology4 %></span>
  <% end %>
  <% if @project.technology5 %>
    <span class="technology"><%= @project.technology5 %></span>
  <% end %>
</div>

<div class="show-content">
  <div class="row">
    <div class="show-images col m6 slide-left-start">
      <%= image_tag @project.image_one_url, :class => "show-image" %>
    </div>
    <div class="show-description col m6 slide-right-start">
      <%= @project.description_one %>
    </div>
  </div>
  <% if @project.description_two %>
    <div class="row">
      <div class="show-description col m6 slide-left-start">
        <%= @project.description_two %>
      </div>
      <div class="show-images col m6 slide-right-start">
        <%= image_tag @project.image_two_url, :class => "show-image" %>
      </div>
    </div>
  <% end %>
  <% if @project.description_three %>
    <div class="row">
      <div class="show-images col m6 slide-left-start">
        <%= image_tag @project.image_three_url, :class => "show-image" %>
      </div>
      <div class="show-description col m6 slide-right-start">
        <%= @project.description_three %>
      </div>
    </div>
  <% end %>
  <% if @project.description_four %>
    <div class="row">
      <div class="show-description col m6 slide-left-start">
        <%= @project.description_four %>
      </div>
      <div class="show-images col m6 slide-right-start">
        <%= image_tag @project.image_four_url, :class => "show-image" %>
      </div>
    </div>
  <% end %>
  <% if @project.description_five %>
    <div class="row">
      <div class="show-images col m6 slide-left-start">
        <%= image_tag @project.image_five_url, :class => "show-image" %>
      </div>
      <div class="show-description col m6 slide-right-start">
        <%= @project.description_five %>
      </div>
    </div>
  <% end %>
</div>
